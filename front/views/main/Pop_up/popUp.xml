<?xml version="1.0" encoding="UTF-8" ?>
<template>
	<name>Pop Up</name>
	<description>Display your related posts as a pop up frame</description>
	<optionsArrayName>erpPROCarouselOptions</optionsArrayName>
	<options>
		<position>bottom</position>
		<numOfPostsPerRow>3</numOfPostsPerRow>
		<backgroundColor>#fefefe</backgroundColor>
		<backgroundTransparency>0.8</backgroundTransparency>
		<triggerAfter>0.8</triggerAfter></options>
	<optionSaveValidation>
		<file>optionSaveValidation.php</file>
		<function>validateOptionSave</function>
	</optionSaveValidation>
	<settingsPageFilePath>settings.php</settingsPageFilePath>
	<viewFilePath>popUp.php</viewFilePath>
	<jsFilePath>
		<hoverIntent>assets/js/jquery.hoverIntent.min.js</hoverIntent>
		<mbFlipText>assets/js/jquery.mb.flipText.js</mbFlipText>
		<mbExtruder>
			<path>assets/js/mbExtruder.js</path>
			<deps>
				<hoverIntent>hoverIntent</hoverIntent>
				<mbFlipText>mbFlipText</mbFlipText>
				<jquery>jquery</jquery>
			</deps>
		</mbExtruder>
		<popUp>
			<path>assets/js/popUp.js</path>
			<deps>
				<mbExtruder>mbExtruder</mbExtruder>
				<jquery>jquery</jquery>
			</deps>
		</popUp></jsFilePath>
	<cssFilePath>
		<mbExtruder>assets/css/mbExtruder.css</mbExtruder>
		<popUp>assets/css/popUp.css</popUp>
	</cssFilePath>
</template>