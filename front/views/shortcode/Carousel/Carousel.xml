<?xml version="1.0" encoding="UTF-8" ?>
<template>
	<name>Carousel</name>
	<description>Display your related posts as a delegant carousel
	</description>
	<optionsArrayName>erpPROCarouselOptions</optionsArrayName>
	<options>
		<carouselAutoTime>2</carouselAutoTime>
		<carouselMaxVisible>6</carouselMaxVisible>
		<carouselMinVisible>2</carouselMinVisible>
		<carouselPauseHover>true</carouselPauseHover>
		<thumbCaption>false</thumbCaption>
	</options>
	<optionSaveValidation>
		<file>optionSaveValidation.php</file>
		<function>validateMainCarouselOption</function>
	</optionSaveValidation>
	<settingsPageFilePath>settings.php</settingsPageFilePath>
	<viewFilePath>carousel.php</viewFilePath>
	<jsFilePath>
		<carousel>assets/carousel.js</carousel>
	</jsFilePath>
	<cssFilePath>
		<carousel>assets/carousel.css</carousel>
	</cssFilePath>
	<preregisteredScripts>
		<css>
			<bootstrapText>erp_pro-bootstrap-text</bootstrapText>
			<erpPROCaptionCSS>erp_pro-erpPROCaptionCSS</erpPROCaptionCSS>
		</css>
		<js>
			<erpPROCaptionJS>erp_pro-erpPROCaptionJS</erpPROCaptionJS>
		</js>
	</preregisteredScripts>
</template>